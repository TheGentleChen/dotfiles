# newsboat config by Rainbow Chen

cache-file "~/.cache/newsboat/cache.db"
error-log "~/.cache/newsboat/error.log"
save-path "~/.cache/newsboat/savedfiles"

keep-articles-days 30
max-items 200

auto-reload yes
refresh-on-startup yes
reload-threads 4
goto-next-feed no

show-keymap-hint no

unbind-key H
unbind-key L
unbind-key o
bind-key k up
bind-key j down
bind-key H home
bind-key L end
bind-key i open
bind-key o open-in-browser
